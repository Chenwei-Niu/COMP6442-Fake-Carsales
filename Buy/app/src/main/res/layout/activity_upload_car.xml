<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusableInTouchMode="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="UPLOAD CAR"
        android:textSize="30dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/upload_car_information"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginTop="20dp"
        android:hint="Type Your Car's Information\nPlease Follow the format of\n\nYEAR BRAND MODEL"/>
    <EditText
        android:id="@+id/upload_car_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:hint="Your Car's URL Image\n Try Free Image Hosting 'ImgBB'"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#000"
            android:text="Year"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/upload_year_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:entries="@array/upload_year"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#000"
            android:text="Brand"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/upload_brand_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:entries="@array/upload_brand"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Body Style"
            android:textColor="#000"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/upload_bodystyle_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:entries="@array/upload_bodystyle"
            android:spinnerMode="dropdown"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Location"
            android:textColor="#000"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/upload_location_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:entries="@array/upload_location"
            android:spinnerMode="dropdown"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#000"
            android:text="Transmission"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/upload_transmission_spinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:entries="@array/upload_transmission"
            android:spinnerMode="dropdown"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="Odometer: "
            android:textColor="#000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/upload_car_odometer"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="  Please type in a number"
            android:inputType="text"
            android:maxLines="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Engine: "
            android:textColor="#000"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/upload_car_engine"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:maxLines="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Price:  "
            android:textColor="#000"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/upload_car_price"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:maxLines="1"
            android:hint="  Please type in a number"
            />

    </LinearLayout>

    <Button
        android:id="@+id/upload_car_submit_button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="submit Your car"
        android:background="#338DFF"
        android:clickable="true"
        android:textAlignment="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"/>





</LinearLayout>